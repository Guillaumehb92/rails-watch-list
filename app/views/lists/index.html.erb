<div class="container mt-3 mb-3 p-3 bg-light">
  <h1> My lists </h1>

  <ul>
    <% @lists.each do |list| %>
      <li>
        <%= link_to list.name, list_path(list) %>

      </li>
    <% end %>
  </ul>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

</div>

<div class="container mt-3 mb-3 p-3 bg-light">
  <%= link_to "Create a new list", new_list_path %>
</div>